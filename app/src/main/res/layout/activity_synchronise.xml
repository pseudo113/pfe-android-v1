<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.labrosse.suivicommercial.activity.SynchroniseActivity">

    <LinearLayout
        android:id="@+id/activity_synchronise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_above="@+id/activity_synchronise_result"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">



            <com.labrosse.suivicommercial.ui.SynchronisationView
                android:id="@+id/user_synchronisationview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.labrosse.suivicommercial.ui.SynchronisationView
                android:id="@+id/city_synchronisationview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.labrosse.suivicommercial.ui.SynchronisationView
                android:id="@+id/sub_partner_synchronisationview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.labrosse.suivicommercial.ui.SynchronisationView
                android:id="@+id/product_synchronisationview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <com.labrosse.suivicommercial.ui.SynchronisationView
                android:id="@+id/parcours_synchronisationview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.labrosse.suivicommercial.ui.SynchronisationView
                android:id="@+id/parcous_sub_partner_synchronisationview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.labrosse.suivicommercial.ui.SynchronisationView
                android:id="@+id/parcous_visite_synchronisationview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.labrosse.suivicommercial.ui.SynchronisationView
                android:id="@+id/parcous_visite_product_synchronisationview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.labrosse.suivicommercial.ui.SynchronisationView
                android:id="@+id/parcous_visite_picture_synchronisationview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_synchronise_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/result_textView" />
    <Button
        android:id="@+id/synchronisation_button"
        android:layout_width="wrap_content"
        android:text="DÃ©marrer la synchronisation"
        android:layout_height="wrap_content" />
</LinearLayout>
</RelativeLayout>
